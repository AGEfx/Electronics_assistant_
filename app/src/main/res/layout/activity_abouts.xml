<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
android:orientation="vertical"
    tools:context="com.example.shaba.cards.Abouts"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:text="Помощник электротехника"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:text="Приветствую всех людей, увлекающихся электротехникой или собирающихся увлечься. Наше приложение поможет вам узнать об особенностях электротехники, научит самостоятельно разбираться в этом и собирать свои электро схемы. Например систему умного дома или другие полезные вещи."
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Version: v1.0"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Разработчик:Шабашев Максим"
        android:textAlignment="center" />
</LinearLayout>
